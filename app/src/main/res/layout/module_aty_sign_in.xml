<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  >
  <ImageView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:src="@drawable/bg"
    android:scaleType="centerCrop"
    />

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      android:paddingLeft="29dp"
      android:paddingRight="29dp"
      android:layout_marginTop="99dp"
      >

      <TextView
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="27dp"
        android:text="@string/app_name"
        android:textColor="@color/white"
        />
      <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="22dp"
        android:layout_marginTop="21dp"
        android:text="大小额贷 · 值得信赖"
        android:textColor="@color/white"
        />

    </LinearLayout>

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      android:paddingLeft="25dp"
      android:paddingRight="25dp"
      android:layout_marginTop="71dp"
      >


      <LinearLayout
        android:background="@drawable/corners_x28dp_solid_white_a20"
        android:layout_width="match_parent"
        android:layout_height="@dimen/action_group_height"
        android:divider="@drawable/line_size_x1dp_solid_white"
        android:dividerPadding="18dp"
        android:orientation="horizontal"
        android:showDividers="middle">
        <EditText
          android:id="@+id/et_input_phone"
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_weight="1"
          android:paddingLeft="21dp"
          android:paddingRight="12dp"
          android:background="@color/transparent"
          android:hint="请输入手机号码"
          android:inputType="phone"
          android:textColor="@color/gray_light"
          android:textColorHint="@color/gray_light_a50"
          android:textSize="17dp" />

        <TextView
          android:id="@+id/tv_fetch_code"
          android:layout_width="wrap_content"
          android:layout_height="match_parent"
          android:paddingRight="21dp"
          android:paddingLeft="21dp"
          android:gravity="center"
          android:text="获取验证码"
          android:textSize="17dp"
          android:textColor="@color/txt_gray_code_button" />

      </LinearLayout>


      <EditText
        android:layout_marginTop="15dp"
        android:id="@+id/et_input_code"
        android:textColor="@color/gray_light"
        android:textColorHint="@color/gray_light_a50"
        android:textSize="17dp"
        android:inputType="number"
        android:paddingLeft="21dp"
        android:paddingRight="12dp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/action_group_height"
        android:background="@drawable/corners_x28dp_solid_white_a20"
        android:hint="请输入短信验证码"
        />

      <TextView
        android:id="@+id/tv_sign_in_operate"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/action_group_height"
        android:background="@drawable/selector_corners_sign_in_button"
        android:textColor="@color/txt_sign_in_button"
        android:text="登陆"
        android:textSize="20dp"
        android:gravity="center"
        />

    </LinearLayout>

    <FrameLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:paddingLeft="68dp"
      android:paddingRight="68dp"
      android:paddingBottom="45dp"
      android:paddingTop="45dp"
      >
      <TextView
        android:id="@+id/tv_sign_protocol"
        android:padding="10dp"
        android:layout_gravity="center|bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="未注册用户将直接为您注册，《用户服务协议》"
        android:textSize="12dp"
        android:textColor="@color/gray_medium"
        />


    </FrameLayout>

  </LinearLayout>


</FrameLayout>